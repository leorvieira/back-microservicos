<?xml version="1.0" encoding="UTF-8" ?>
<persistence-unit name="my-pu">
    <description>Hibernate EntityManager Demo</description>
    <class>com.leorvieira.apims.models.entities.Evento</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:h2:file:~/dbh2"/>
        <property name="javax.persistence.jdbc.user" value="teste"/>
        <property name="javax.persistence.jdbc.password" value="testepwd"/>
    </properties>
</persistence-unit>